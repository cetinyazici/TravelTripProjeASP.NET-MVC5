@model TravelTripProje.Models.Siniflar.BlogYorum
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Test.cshtml";
}

<link href="~/web2/css/bootstrap.css" rel='stylesheet' type='text/css' />
<link href="~/web2/css/style.css" rel='stylesheet' type='text/css' />

<div class="single">
    <div class="container">
        <div class="col-md-8 single-main">
            <div class="single-grid">
                @foreach (var item in Model.Deger1)
                {
                    <img src="@item.BlogImage" alt="" />
                    <strong><a href="/Blog/BlogDetay/@item.ID">@item.Baslik</a></strong>
                    <p>
                        @item.Aciklama
                    </p>
                    <p>@item.Tarih</p>
                    <br />
                    <br />
                }

            </div>
        </div>

        <div class="col-md-4 side-content">
            <div class="recent">
                <h3>SON BLOGLAR</h3>
                @foreach (var item in Model.Deger3)
                {
                    <ul>
                        <li><a href="/Blog/BlogDetay/@item.ID">@item.Baslik</a></li>
                    </ul>
                }
            </div>
            <div class="comments">
                <h3>SON YORUMLAR</h3>
                @foreach (var item in Model.Deger3)
                {
                <ul>
                    <li><a href="/Blog/BlogDetay/@item.ID">@item.Tarih</a></li>
                </ul>
                }
            </div>

        </div>
        <div class="clearfix"></div>
    </div>
</div>









