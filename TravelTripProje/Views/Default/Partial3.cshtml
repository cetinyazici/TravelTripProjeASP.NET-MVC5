@using TravelTripProje.Models.Siniflar
@model List<Blog>
<div class="box1-left">
    @foreach (var item in Model)
    {
        int uzun = @item.Aciklama.Length;
        <div class="bot-img">
            <img src="@item.BlogImage" alt="" />
        </div>
        <div class="bot-desc">
            <p>@item.Aciklama.Substring(0, uzun / 10)...</p>
        </div>
        <div class="clear"></div>
    }
</div>
